<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_source_Layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/White"
        android:visibility="visible">

        <Button
            android:id="@+id/source_find_Button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/search_icon"
            android:layout_marginLeft="3dp"
            android:layout_alignParentRight="true" />

        <EditText
            android:id="@+id/source_location_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="source"
            android:paddingLeft="5dp"
            android:background="@drawable/prees_effect"
            android:layout_toLeftOf="@id/source_find_Button" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_dest_Layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/White"
        android:visibility="visible">

        <Button
            android:id="@+id/dest_find_Button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/search_icon"
            android:layout_marginLeft="3dp"
            android:layout_alignParentRight="true" />
        <EditText
            android:id="@+id/dest_location_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="desination"
            android:paddingLeft="5dp"
            android:background="@drawable/prees_effect"
            android:layout_toLeftOf="@id/dest_find_Button" />

    </RelativeLayout>

</LinearLayout>